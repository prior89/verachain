# VeraChain Frontend Environment Configuration
# 프론트엔드 환경 설정 파일

# API Configuration (API 설정)
# Local development backend URL
# 로컬 개발용 백엔드 URL
REACT_APP_API_URL=http://localhost:5000/api

# Production backend URL (automatically used when deployed)
# 프로덕션 백엔드 URL (배포시 자동 사용)
REACT_APP_PRODUCTION_API_URL=https://verachain-backend2.onrender.com/api

# App Configuration (앱 설정)
REACT_APP_NAME=VeraChain
REACT_APP_VERSION=2.0.0

# Development Settings (개발 설정)
GENERATE_SOURCEMAP=true
REACT_APP_DEBUG=true

# Build Configuration (빌드 설정)
# Disable CI warnings for build process
# 빌드 과정에서 CI 경고 비활성화
CI=false
BUILD_PATH=build

# Features Toggle (기능 토글)
REACT_APP_ENABLE_AI=true
REACT_APP_ENABLE_BLOCKCHAIN=true
REACT_APP_ENABLE_QR_SCAN=true

# Optional Services (선택적 서비스)
# Uncomment if you want to use external services
# 외부 서비스 사용시 주석 해제
# REACT_APP_SENTRY_DSN=your_sentry_dsn_here
# REACT_APP_ANALYTICS_ID=your_analytics_id_here

# Blockchain Configuration (블록체인 설정)
# Only needed if using real blockchain features
# 실제 블록체인 기능 사용시에만 필요
# REACT_APP_BLOCKCHAIN_RPC=https://polygon-amoy.g.alchemy.com/v2/YOUR_API_KEY
# REACT_APP_CONTRACT_ADDRESS=your_contract_address_here
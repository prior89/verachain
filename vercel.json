{
  "version": 2,
  "name": "verachain-v2",
  "builds": [
    {
      "src": "mobile/dist/index.html",
      "use": "@vercel/static"
    },
    {
      "src": "mobile/dist/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/mobile/dist/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/mobile/dist/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options", 
          "value": "nosniff"
        }
      ]
    }
  ]
}
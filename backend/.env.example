# VeraChain Backend Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Server Configuration (서버 설정)
NODE_ENV=development
PORT=5000

# Database Configuration (데이터베이스 설정)
# Set USE_MEMORY_DB=true for local development without MongoDB
MONGODB_URI=your_mongodb_connection_string_here
USE_MEMORY_DB=true

# JWT Security (JWT 보안)
# Generate a secure secret key for production
JWT_SECRET=your_secure_jwt_secret_key_here

# CORS Configuration (CORS 설정)
FRONTEND_URL=http://localhost:3000
MOBILE_APP_URL=http://10.0.2.2:3000

# Production URLs (프로덕션 URL)
PRODUCTION_FRONTEND_URL=https://your-frontend-domain.com
PRODUCTION_BACKEND_URL=https://your-backend-domain.com

# AI Service Configuration (AI 서비스 설정)
AI_SERVICE_ENABLED=true
TENSORFLOW_BACKEND=cpu

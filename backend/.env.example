# ==========================================
# VERACHAIN ENVIRONMENT CONFIGURATION
# ==========================================

# Server Configuration
NODE_ENV=development
PORT=5000
HOST=localhost

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/verachain
REDIS_URL=redis://localhost:6379

# ==========================================
# POLYGON AMOY TESTNET (Chain ID: 80002)
# IMPORTANT: This is Amoy, NOT Mumbai
# ==========================================
AMOY_RPC=https://rpc-amoy.polygon.technology
CHAIN_ID=80002
CHAIN_NAME=Polygon Amoy Testnet

# Alternative Polygon Amoy RPC Endpoints:
# AMOY_RPC=https://polygon-amoy.g.alchemy.com/v2/your-api-key
# AMOY_RPC=https://polygon-amoy.infura.io/v3/your-project-id
# AMOY_RPC=https://rpc-amoy.maticvigil.com

# Blockchain Wallet Configuration
# NEVER commit your private key! Use environment variables
PRIVATE_KEY=0x_your_wallet_private_key_here
CONTRACT_ADDRESS=0x_your_deployed_contract_address_here
WALLET_ADDRESS=0x_your_wallet_public_address_here

# Get test MATIC from: https://faucet.polygon.technology/

# ==========================================
# AUTHENTICATION & SECURITY
# ==========================================
JWT_SECRET=change-this-to-a-very-long-random-string-in-production
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

SESSION_SECRET=another-very-long-random-string-for-sessions
SESSION_NAME=verachain_session
SESSION_MAX_AGE=86400000

BCRYPT_ROUNDS=10
ENCRYPTION_KEY=32-character-encryption-key-here

# ==========================================
# FRONTEND & CORS
# ==========================================
FRONTEND_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ==========================================
# AI & ML SERVICES
# ==========================================
# TensorFlow.js Model (leave empty to use mock)
TENSORFLOW_MODEL_URL=

# Tesseract.js OCR Languages
TESSERACT_LANG=eng+kor

# Mock Services for Development
MOCK_BLOCKCHAIN=false
MOCK_AI=true
MOCK_OCR=true

# ==========================================
# FILE UPLOAD SETTINGS
# ==========================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# ==========================================
# RATE LIMITING & SECURITY
# ==========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==========================================
# PRIVACY SETTINGS (CRITICAL)
# ==========================================
# NEVER set these to true in production!
ENABLE_TRACKING=false
STORE_HISTORY=false
EXPOSE_TRANSFER_DATA=false
SHOW_PREVIOUS_OWNERS=false

# ==========================================
# LOGGING & MONITORING
# ==========================================
LOG_LEVEL=info
LOG_FILE=logs/app.log
ENABLE_METRICS=true
METRICS_PORT=9090

# Sentry Error Tracking (Optional)
SENTRY_DSN=

# ==========================================
# CACHE CONFIGURATION
# ==========================================
CACHE_TTL=3600
CACHE_CHECK_PERIOD=600

# ==========================================
# SMART CONTRACT EVENTS
# ==========================================
LISTEN_TO_EVENTS=true
EVENT_POLLING_INTERVAL=15000

# ==========================================
# FEATURE FLAGS
# ==========================================
ENABLE_2FA=false
ENABLE_WEBHOOKS=false
ENABLE_NOTIFICATIONS=true
ENABLE_EMAIL=false
ENABLE_SMS=false

# ==========================================
# OPTIONAL SERVICES
# ==========================================

# Email (if ENABLE_EMAIL=true)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM=VeraChain <noreply@verachain.io>

# SMS (if ENABLE_SMS=true)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# IPFS (Optional)
IPFS_HOST=ipfs.infura.io
IPFS_PORT=5001
IPFS_PROTOCOL=https

# Analytics (Optional)
GA_TRACKING_ID=

# ==========================================
# DEVELOPMENT TOOLS
# ==========================================
# Enable these only in development
DEBUG=false
VERBOSE_LOGGING=false
SHOW_STACK_TRACES=false
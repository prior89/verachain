{
  "name": "verachain-backend",
  "version": "1.0.0",
  "description": "VeraChain Backend API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "seed": "node src/seeders/sampleData.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:privacy": "jest src/tests/privacy.test.js",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "mongoose": "^7.5.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "multer": "^1.4.5-lts.1",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "express-validator": "^7.0.1",
    "express-mongo-sanitize": "^2.2.0",
    "xss-clean": "^0.1.4",
    "hpp": "^0.2.3",
    "sharp": "^0.32.5",
    "tesseract.js": "^5.0.0",
    "@tensorflow/tfjs": "^4.10.0",
    "redis": "^4.6.8",
    "ioredis": "^5.3.2",
    "qrcode": "^1.5.3",
    "ethers": "^6.7.1",
    "browser-image-compression": "^2.0.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "eslint": "^8.48.0",
    "jest": "^29.6.4",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/tests/**/*.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "verbose": true
  }
}

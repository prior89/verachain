{
  "name": "verachain-backend",
  "version": "2.0.0",
  "description": "VeraChain Backend API - 2025 Edition with Fastify, GraphQL, WebSocket",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:fastify": "node server.fastify.js",
    "dev": "nodemon server.js",
    "dev:fastify": "nodemon server.fastify.js",
    "seed": "node src/seeders/sampleData.js",
    "seed:authentic": "node src/seeders/authenticProducts.js",
    "seed:ai": "node src/seeders/aiTrainingData.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:privacy": "jest src/tests/privacy.test.js",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix"
  },
  "dependencies": {
    "@apollo/server": "^4.11.0",
    "@fastify/cors": "^10.0.1",
    "@fastify/helmet": "^12.0.1",
    "@fastify/jwt": "^9.0.1",
    "@fastify/rate-limit": "^10.0.1",
    "@fastify/websocket": "^11.0.1",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.51.0",
    "@prisma/client": "^6.0.1",
    "@sentry/node": "^8.41.0",
    "@tensorflow/tfjs": "^4.22.0",
    "apollo-server-express": "^3.13.0",
    "bcryptjs": "^2.4.3",
    "browser-image-compression": "^2.0.2",
    "bull": "^4.16.3",
    "cors": "^2.8.5",
    "cross-env": "^10.0.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.7.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "fastify": "^5.0.0",
    "graphql": "^16.9.0",
    "helmet": "^7.0.0",
    "hpp": "^0.2.3",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "prom-client": "^15.1.3",
    "qrcode": "^1.5.3",
    "redis": "^4.6.8",
    "sharp": "^0.32.6",
    "socket.io": "^4.8.1",
    "tesseract.js": "^5.0.0",
    "winston": "^3.15.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "eslint": "^8.48.0",
    "jest": "^29.6.4",
    "nodemon": "^3.0.1",
    "prisma": "^6.0.1",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/tests/**/*.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "verbose": true
  }
}

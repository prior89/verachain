# VeraChain Backend Environment Configuration
# 백엔드 환경 설정 파일

# Server Configuration (서버 설정)
NODE_ENV=development
PORT=5000

# Database Configuration (데이터베이스 설정)
# Memory DB is used by default - MongoDB is optional
# 기본적으로 메모리 DB 사용 - MongoDB는 선택사항
MONGODB_URI=mongodb://localhost:27017/verachain
USE_MEMORY_DB=false

# JWT Security (JWT 보안)
# You can change this secret key for production
# 프로덕션에서는 이 비밀 키를 변경하세요
JWT_SECRET=verachain_development_secret_2024_secure_key_change_in_production

# CORS Configuration (CORS 설정)
FRONTEND_URL=http://localhost:3000
MOBILE_APP_URL=http://10.0.2.2:3000

# Production URLs (프로덕션 URL)
PRODUCTION_FRONTEND_URL=https://verachain-pl.vercel.app
PRODUCTION_BACKEND_URL=https://verachain-backend2.onrender.com

# AI Service Configuration (AI 서비스 설정)
AI_SERVICE_ENABLED=true
TENSORFLOW_BACKEND=cpu

# File Upload Configuration (파일 업로드 설정)
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# Logging (로깅)
LOG_LEVEL=info

# Development Settings (개발 설정)
DEBUG=true
ENABLE_CONSOLE_LOGS=true

# Optional External Services (선택적 외부 서비스)
# Uncomment and configure if needed (필요시 주석 해제 후 설정)
# ALCHEMY_API_KEY=your_alchemy_api_key_here
# SENTRY_DSN=your_sentry_dsn_here
# REDIS_URL=redis://localhost:6379